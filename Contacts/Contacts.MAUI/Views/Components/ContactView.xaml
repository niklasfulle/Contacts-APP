<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contacts.MAUI.Views.Components.ContactView">
    <Grid RowDefinitions="*,70" ColumnDefinitions="*" >
        <VerticalStackLayout Spacing="10" Margin="20, 50, 20, 0" Grid.Row="0" Grid.Column="0">
            <Border Padding="15, 14, 15, 14" StrokeShape="RoundRectangle 10, 10, 10, 10">
                <HorizontalStackLayout>
                    <Label Text="Name:" VerticalOptions="Center" WidthRequest="70" FontAttributes="Bold" />
                    <Label x:Name="LabelName" VerticalOptions="Center" WidthRequest="250" />
                </HorizontalStackLayout>
            </Border>
            <Border Padding="15, 14, 15, 14" StrokeShape="RoundRectangle 10, 10, 10, 10">
                <HorizontalStackLayout>
                    <Label Text="Email:" VerticalOptions="Center" WidthRequest="70" FontAttributes="Bold" />
                    <Label x:Name="LabelEmail" VerticalOptions="Center" WidthRequest="250" />
                </HorizontalStackLayout>
            </Border>
            <Border Padding="15, 14, 15, 14" StrokeShape="RoundRectangle 10, 10, 10, 10">
                <HorizontalStackLayout>
                    <Label Text="Phone:" VerticalOptions="Center" WidthRequest="70" FontAttributes="Bold" />
                    <Label x:Name="LabelPhone" VerticalOptions="Center" WidthRequest="250" />
                </HorizontalStackLayout>
            </Border>
            <Border Padding="15, 14, 15, 14" StrokeShape="RoundRectangle 10, 10, 10, 10">
                <HorizontalStackLayout>
                    <Label Text="Address:" VerticalOptions="Center" WidthRequest="70" FontAttributes="Bold" />
                    <Label x:Name="LabelAddress" VerticalOptions="Center" WidthRequest="250" />
                </HorizontalStackLayout>
            </Border>
        </VerticalStackLayout>
        <VerticalStackLayout Margin="0, 0, 0, 0" HorizontalOptions="Center" Grid.Row="1" Grid.Column="0">
            <HorizontalStackLayout Spacing="40">
                <Button x:Name="btnCancel" Clicked="btnCancel_Clicked" Text="Cancel" WidthRequest="100" BackgroundColor="Red"></Button>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Grid>
</ContentView>